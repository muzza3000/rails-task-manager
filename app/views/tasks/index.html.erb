<h1>My Tasks</h1>
<p>Here is your task list:</p>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task_path(task) do %>
        <span><%= task.completed ? "☑ " : "☐ " %></span>
        <span><%= task.title %></span>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add a new task',tasks_new_path %>
