<h1>My Tasks</h1>
<p>Here is your task list:</p>
<ul>
  <% @tasks.each do |task| %>
    <li>
        <span><%= task.completed ? "☑ " : "☐ " %></span>
        <%= link_to task_path(task) do %>
          <span><%= task.title %></span>
        <% end %>
        <span> • </span>
        <span><%= link_to '🗑', task_path(task), method: :delete, data: { confirm: "Are you sure?" }  %></span>
    </li>
  <% end %>
</ul>

<%= link_to 'Add a new task',tasks_new_path %>
